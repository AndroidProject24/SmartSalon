<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    card_view:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_time1"
                style="@style/style_text_appointment"/>

            <TextView
                android:id="@+id/txt_time2"
                style="@style/style_base"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/primary_dark"/>

            <TextView
                android:id="@+id/txt_name1"
                style="@style/style_base"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_name2"
                style="@style/style_base"
                android:layout_below="@+id/txt_name1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/txt_money"
                style="@style/style_base"
                android:layout_alignParentRight="true"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_check"
                style="@style/style_base"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txt_money"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/layout_select_provider"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">
    <com.techart.smartsalon.libs.calendar.CompactCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/compactcalendar_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:compactCalendarTargetHeight="200dp"
        app:compactCalendarTextSize="12sp"
        app:compactCalendarBackgroundColor="@color/primary"
        app:compactCalendarTextColor="#fff"
        app:compactCalendarCurrentSelectedDayBackgroundColor="@color/colorPrimaryDark"
        app:compactCalendarCurrentDayBackgroundColor="@color/black"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_provider"
        android:layout_below="@+id/compactcalendar_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <include layout="@layout/progressbar"/>
</RelativeLayout>
